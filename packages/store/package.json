{
  "name": "@typeb/store",
  "version": "1.0.0",
  "description": "Shared Redux store for TypeB apps",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.7",
    "@typeb/types": "workspace:*",
    "@typeb/core": "workspace:*",
    "react-redux": "^9.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
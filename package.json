{
  "name": "typeb-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "TypeB Family App - Monorepo for mobile and web applications",
  "author": "TypeB Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:mobile": "turbo run dev --filter=@typeb/mobile",
    "dev:web": "turbo run dev --filter=@typeb/web",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:web": "turbo run build --filter=@typeb/web",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "deploy": "vercel --cwd apps/web",
    "deploy:prod": "vercel --cwd apps/web --prod"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
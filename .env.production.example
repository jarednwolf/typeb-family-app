# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Firebase Configuration
FIREBASE_API_KEY=your-production-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id

# App Configuration
APP_ENV=production
APP_NAME="TypeB Family"
APP_VERSION=1.0.0

# API Configuration
API_TIMEOUT=30000
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Security Configuration
ENABLE_SECURITY_MONITORING=true
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=3600000  # 1 hour in milliseconds

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# Third Party Services (if applicable)
SENTRY_DSN=your-sentry-dsn-if-using
MIXPANEL_TOKEN=your-mixpanel-token-if-using

# App Store Configuration
IOS_BUNDLE_ID=com.yourcompany.typebfamily
ANDROID_PACKAGE_NAME=com.yourcompany.typebfamily

# Deep Linking
APP_SCHEME=typebfamily
UNIVERSAL_LINK_DOMAIN=typebfamily.app

# Cloud Functions URL (if deployed separately)
CLOUD_FUNCTIONS_URL=https://us-central1-your-project.cloudfunctions.net

# Monitoring Alerts
ALERT_EMAIL=security@typebfamily.app
SLACK_WEBHOOK_URL=your-slack-webhook-for-alerts